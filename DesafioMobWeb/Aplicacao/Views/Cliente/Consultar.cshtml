@model IEnumerable<Modelo.Cadastros.Cliente>

@{
    ViewBag.Title = "Lista de Clientes";
}

<h2>Consulta de Clientes</h2>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Data Tables</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/admin-lte/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/admin-lte/plugins/datatables/dataTables.bootstrap.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin-lte/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="~/admin-lte/css/skins/_all-skins.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<!--###   TABELA DE CONSULTA DE CLIENTES   ###-->

<p>
    @Html.ActionLink("Cadastrar Novo", "Cadastrar")
</p>
<table class="table">
    <!--Títulos das Colunas-->
    <tr>
        <th>
            @Html.DisplayNameFor(x => x.RazaoSocialCliente)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.FantasiaCliente)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.CnpjCliente)
        </th>
        <th>
            @Html.DisplayNameFor(x => x.RuaCliente)
        </th>      
    </tr>

    <!--Loop para listar todos os registros do BD-->
    @foreach (var cliente in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(x => cliente.RazaoSocialCliente)
        </td>
        <td>
            @Html.DisplayFor(x => cliente.FantasiaCliente)
        </td>
        <td>
            @Html.DisplayFor(x => cliente.CnpjCliente)
        </td>
        <td>
            @Html.DisplayFor(x => cliente.RuaCliente),
 
            @Html.DisplayFor(x => cliente.NumeroRuaCliente)
 
            @Html.DisplayFor(x => cliente.ComplementoCliente),

            @Html.DisplayFor(x => cliente.BairroCliente) -

            @Html.DisplayFor(x => cliente.MunicipioCliente),

            @Html.DisplayFor(x => cliente.CepCliente)
        </td>
        <td class="fa fa-eye">
            @Html.ActionLink("Visualizar", "Detalhes", new { id = cliente.ClienteID })
        </td>
        <td class="fa fa-edit">
            @Html.ActionLink("Editar", "Editar", new { id = cliente.ClienteID })
        </td>
        <td class="fa fa-trash-o">
            @Html.ActionLink("Excluir", "Excluir", new { id = cliente.ClienteID })
        </td>
    </tr>
    }
</table>
